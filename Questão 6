import os
os.system("clear")

nota1 = float(input("digite a primeira nota: "))

nota2 = float(input("digite a segunda nota: "))

media = (nota1 + nota2)/ 2 
print(f"media: {media}")

if media >= 6:
    print("parabéns! Você está aprovado. ")
elif media >= 4:
    print("Você está em recuperação.")
else:
    print("Você está reprovado.")